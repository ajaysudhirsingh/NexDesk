# NEXDESK Production Environment Configuration
# Copy this file to .env and update with your production values

# Application Environment
NODE_ENV=production
PORT=8001
HOST=0.0.0.0

# Database Configuration - MongoDB Atlas
MONGO_URL=mongodb+srv://nexdesk:ajay1234@nexusdesk.rag1goi.mongodb.net/nexdesk?retryWrites=true&w=majority
DB_NAME=nexdesk

# JWT Configuration
SECRET_KEY=your-super-secure-secret-key-minimum-32-characters-long
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting (Enterprise settings)
RATE_LIMIT_PER_MINUTE=1000

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://:your-redis-password@redis:6379
REDIS_PASSWORD=your-redis-password

# MongoDB Atlas - No additional configuration needed
# Database backup and scaling handled by Atlas

# Logging Configuration
LOG_LEVEL=info



# Session Configuration
SESSION_SECRET=your-session-secret-minimum-32-characters-long

# Frontend URL
FRONTEND_URL=https://yourdomain.com

# Security Configuration
IP_WHITELIST=127.0.0.1,::1
TRUSTED_PROXIES=127.0.0.1,::1

# Monitoring & Alerting
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
BACKUP_EMAIL_TO=admin@yourdomain.com
DEPLOY_EMAIL_TO=devops@yourdomain.com

# Backup Configuration
BACKUP_S3_BUCKET=nexdesk-backups
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Performance Monitoring
ERROR_TRACKING_URL=https://your-sentry-dsn
PERFORMANCE_MONITORING=true

# Database Backup Settings
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Grafana Configuration (for monitoring profile)
GRAFANA_PASSWORD=your-secure-grafana-password